styles {
}
group { "main";
	parts {
		rect { "feedback";
			desc { "default";
				rel1.relative: 0.0 0.0;
				rel2.relative: 1.0 1.0;
				color: 0 0 0 0;
			}
			desc { "pressed";
				inherit: "default" 0.0;
				color: 179 179 179 179;
			}
		}
		text { "text";
			scale: 1;
			effect: FAR_SOFT_SHADOW;
			repeat;
			desc { "default";
				rel1.offset: 0 17;
				color: 255 255 255 255;
				color2: 128 128 128 50;
				color3: 128 128 128 25;
				text {
					size: 70;
					font: "Sans";
					align: 0.5 0.5;
					text: "1";
				}
			}
		}
		text { "text_small";
			scale: 1;
			repeat;
			effect: FAR_SOFT_SHADOW;
			desc { "default";
				rel1.relative: 0.0 1.0; rel1.to: "text";
				rel1.offset: 0 -17;
				rel2.offset: 0 -11;
				color: 255 255 255 255;
				color2: 128 128 128 50;
				color3: 128 128 128 25;
				text {
					size: 15;
					font: "Sans";
					text: "ABC";
					align: 0.5 1.0;
				}
			}
		}
	}
	programs {
		program {
			signal: "mouse,down,1";
			source: "feedback";
			action: STATE_SET "pressed" 0.0;
			target: "feedback";
		}
		program {
			signal: "mouse,up,1";
			source: "feedback";
			action: STATE_SET "default" 0.0;
			target: "feedback";
		}
	}
}
group { "cancel";
	images {
		image: "ls_back_02_nor.png" COMP;
		image: "ls_back_02_press.png" COMP;
	}
	parts {
		rect { "feedback";
			desc { "default";
				color: 0 0 0 0;
			}
			desc { "pressed";
				inherit: "default" 0.0;
				color: 179 179 179 179;
			}
		}
		image { "button";
			desc { "default";
				image.normal: "ls_back_02_nor.png";
			}
			desc { "pressed";
				image.normal: "ls_back_02_press.png";
			}
